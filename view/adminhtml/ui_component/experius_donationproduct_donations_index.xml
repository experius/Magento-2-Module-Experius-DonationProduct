<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="context" xsi:type="configurableObject">
		<argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\Context</argument>
		<argument name="namespace" xsi:type="string">experius_donationproduct_donations_index</argument>
	</argument>
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">experius_donationproduct_donations_index.experius_donationproduct_donations_grid_data_source</item>
			<item name="deps" xsi:type="string">experius_donationproduct_donations_index.experius_donationproduct_donations_grid_data_source</item>
		</item>
		<item name="spinner" xsi:type="string">experius_donationproduct_donations_columns</item>
	</argument>
	<dataSource name="experius_donationproduct_donations_grid_data_source">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
			<argument name="name" xsi:type="string">experius_donationproduct_donations_grid_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">donations_id</argument>
			<argument name="requestFieldName" xsi:type="string">id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
					<item name="update_url" path="mui/index/render" xsi:type="url"/>
					<item name="storageConfig" xsi:type="array">
						<item name="indexField" xsi:type="string">donations_id</item>
					</item>
				</item>
			</argument>
		</argument>
	</dataSource>
	<listingToolbar name="listing_top">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="sticky" xsi:type="boolean">true</item>
			</item>
		</argument>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
		<exportButton name="export_button"/>
	</listingToolbar>
	<columns name="experius_donationproduct_donations_columns">
		<argument name="data" xsi:type="array"/>
		<selectionsColumn name="ids">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="indexField" xsi:type="string">donations_id</item>
				</item>
			</argument>
		</selectionsColumn>
		<column name="donations_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="sorting" xsi:type="string">asc</item>
					<item name="label" translate="true" xsi:type="string">ID</item>
				</item>
			</argument>
		</column>
		<column name="name">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Charity Name</item>
				</item>
			</argument>
		</column>
		<column name="sku">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Sku</item>
				</item>
			</argument>
		</column>
		<column name="amount">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Amount</item>
				</item>
			</argument>
		</column>
		<column name="order_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Order</item>
				</item>
			</argument>
		</column>
		<column name="order_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Order</item>
				</item>
			</argument>
		</column>
		<column name="order_status">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Order Status</item>
				</item>
			</argument>
		</column>
		<column name="invoiced">
			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Yesno</item>
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">select</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
					<item name="editor" xsi:type="string">select</item>
					<item name="dataType" xsi:type="string">select</item>
					<item name="label" xsi:type="string" translate="true">Invoiced</item>
				</item>
			</argument>
		</column>
		<column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
			<settings>
                		<filter>dateRange</filter>
                		<dataType>date</dataType>
                		<label translate="true">Purchase Date</label>
                		<sorting>desc</sorting>
            		</settings>
		</column>
		<actionsColumn name="actions" class="Experius\DonationProduct\Ui\Component\Listing\Column\ViewOrder">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="indexField" xsi:type="string">order_id</item>
					<item name="urlPath" xsi:type="string">sales/order/view</item>
					<item name="urlParamName" xsi:type="string">order_id</item>
				</item>
			</argument>
		</actionsColumn>
	</columns>
</listing>
